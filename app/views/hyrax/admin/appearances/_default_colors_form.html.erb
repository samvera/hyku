<%= simple_form_for @form, url: admin_appearance_path do |f| %>
  <div class="card-body defaultable-colors">
    <% @form.default_colors.each do |color_name, hex| %>
      <%= render 'color_input', f: f, color_name: color_name, hex: hex %>
    <% end %>
  </div>

  <% theme_colors = @form.custom_theme_colors %>
  <% tenant_colors = @form.tenant_colors %>

  <div class="card-footer">
    <%= link_to 'Restore All Defaults', '#color', class: 'btn btn-secondary restore-all-default-colors' %>
    <% if !theme_colors.empty? %>
      <%= link_to 'Apply Theme Colors', '#color', class: 'btn btn-secondary apply-theme-colors',
        data: { theme_colors: theme_colors.to_json } %>
    <% end %>
    <% if Flipflop.use_tenant_specific_colors? %>
      <% if !tenant_colors.empty? %>
        <%= link_to 'Reset View with Tenant Colors', '#color', class: 'btn btn-secondary apply-tenant-colors',
          data: { tenant_colors: tenant_colors.to_json } %>
      <% end %>
      <%= link_to 'Save and Use Tenant Colors', '#color', class: 'btn btn-secondary save-tenant-colors',
        data: { save_url: main_app.save_tenant_colors_admin_appearance_path } %>
    <% end %>
    <%= f.submit class: 'btn btn-primary float-right' %>
  </div>
<% end %>
