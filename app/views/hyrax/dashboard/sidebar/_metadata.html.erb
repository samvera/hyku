<%# menu item to be inserted when using flexible metadata %>
<% if Hyrax.config.flexible? &&
      current_ability.can?(:manage, Hyrax::FlexibleSchema) &&
      !Site.account&.search_only? &&
      defined?(metadata_profiles_path) %>
  <li class="nav-item">
    <%= menu.nav_link(metadata_profiles_path, class: "nav-link") do %>
      <span class="fa fa-table" aria-hidden="true"></span>
      <span class="sidebar-action-text"><%= t('hyrax.admin.sidebar.metadata_profiles') %></span>
    <% end %>
  </li>
<% end %>
