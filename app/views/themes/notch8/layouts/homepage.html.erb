<%# Define the banner area WITHOUT search controls %>
<% content_for(:navbar) do %>
  <div class="image-masthead notch8-banner">
    <%# Banner background image %>
    <div class="background-container"
         title="<%= block_for(name: 'banner_image_text') %>"
         style="background-image: url('<%= banner_image %>')">
    </div>

    <%# Marketing text overlay %>
    <div class="container site-title-container">
      <div class="site-title h1">
        <%= render "hyrax/homepage/marketing" if controller_name == 'homepage' %>
      </div>
      <%# Homepage About Section Content Block (configurable in the admin dashboard) %>
      <div class="notch8-homepage-about-section-content">
        <% if display_content_block? @homepage_about_section_heading%>
          <h2><%= displayable_content_block @homepage_about_section_heading%></h2>
        <% end %>
        <% if display_content_block? @homepage_about_section_content %>
          <%= displayable_content_block @homepage_about_section_content %>
        <% end %>
      </div>
    </div>
  </div>

  <%# Search bar BELOW banner %>
  <div class="notch8-search-section">
    <div class="container">
      <%= render partial: 'catalog/search_form' %>
    </div>
  </div>
<% end %>

<%# Announcement Content Block (configurable in the admin dashboard) appears at very top of page %>
<% content_for(:announcement_top) do %>
  <%= render 'themes/notch8/hyrax/homepage/announcement' if controller_name == 'homepage' %>
<% end %>

<%# Render main Hyrax layout %>
<%= render template: 'layouts/hyrax' %>
