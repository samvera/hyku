<!-- Analytics Settings Section -->
<div class="card mb-4 border-left-primary">
  <div class="card-header bg-light">
    <h5 class="mb-0 text-primary">
      <i class="fa fa-line-chart mr-2"></i> Analytics Configuration
    </h5>
  </div>
  <div class="card-body">
    <% if settings.key?(:analytics) %>
      <div class="form-group mb-4">
        <%= render 'shared/settings', f: f, key: :analytics, value: settings[:analytics] %>
      </div>
    <% end %>
    
    <% provider = ENV.fetch('HYRAX_ANALYTICS_PROVIDER', 'ga4') %>
    <% if provider == 'matomo' %>
      <div class="alert alert-info">
        <i class="fa fa-info-circle mr-2"></i>
        <strong>Matomo Setup Required:</strong> Additional configuration is needed to complete Matomo analytics setup. 
        Please ensure your system administrator has configured the required Matomo environment variables 
        (MATOMO_BASE_URL, MATOMO_SITE_ID, MATOMO_AUTH_TOKEN).
      </div>
    <% elsif provider == 'ga4' %>
      <div class="alert alert-info">
        <i class="fa fa-info-circle mr-2"></i>
        <strong>Google Analytics 4:</strong> Your system is configured to use Google Analytics 4. 
        Configure your tenant-specific GA4 settings below, or contact your system administrator for global configuration.
      </div>
    <% elsif provider == 'google' %>
      <div class="alert alert-warning">
        <i class="fa fa-exclamation-triangle mr-2"></i>
        <strong>Google Universal Analytics:</strong> Your system is using Google Universal Analytics (legacy). 
        Google has deprecated Universal Analytics. Consider upgrading to Google Analytics 4.
      </div>
    <% end %>
    
    <div class="row" id="google-analytics-fields" style="display: none;">
      <% if settings.key?(:google_analytics_id) %>
        <div class="col-md-6">
          <%= render 'shared/settings', f: f, key: :google_analytics_id, value: settings[:google_analytics_id] %>
        </div>
      <% end %>
      <% if settings.key?(:google_analytics_property_id) %>
        <div class="col-md-6">
          <%= render 'shared/settings', f: f, key: :google_analytics_property_id, value: settings[:google_analytics_property_id] %>
        </div>
      <% end %>
    </div>
  </div>
</div>
