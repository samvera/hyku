<%= simple_form_for @form, url: admin_appearance_path, html: { id: 'favicon-form' } do |f| %>
  <%= hidden_field_tag :return_tab, 'favicon', id: 'return_tab_field_favicon' %>
  <div class="card-body">
    <% require_image = @form.favicon? ? false : true %>
    <%= f.input :favicon, as: :file, wrapper: :vertical_file_input, hint: t('hyrax.admin.appearances.show.forms.favicon.hint') %>
    <%= image_tag @form.favicon.url, class: "img-fluid" if @form.favicon? %>
  </div>
  <div class="card-footer">
    <%= f.submit class: 'btn btn-primary float-right' %>
  </div>
<% end %>
<% if @form.favicon? %>
  <div class="card-footer">
    <%= simple_form_for @form.site, url: main_app.site_path(@form.site) do |f| %>
      <%= f.submit 'Remove favicon', class: 'btn btn-danger', name: :remove_favicon %>
    <% end %>
  </div>
<% end %>
